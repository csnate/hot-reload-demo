{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es2017"
        ],
        "paths": {
            "@shared/*": [
                "../../shared/src/*"
            ]
        },
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    }
}